@Test
void BonusDeveriaSerZeroComSalarioAlto(){
  bonusService service = new BonusService
  
  Try{
    service.calcularBonus(new funcionario("Rodrigo", LocalDate.now(), new BigDecimal("25000.00")));
    fail("Teste Falhou")
  }catch(Exception e){
    assertEquals("funcionario com salario maior do que o esperado")
  }
}



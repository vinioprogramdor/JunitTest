@Test
void BonusDeveriaSerZeroComSalarioAlto(){
  bonusService service = new BonusService
  
  assertThrows(IllegalAgumentExpection.class () -> service.calcularBonus(new funcionario("Rodrigo", LocalDate.now(), new BigDecimal("25000.00")));
}

